<div class="container">
  <h1>Gap</h1>
  <div id="map" class="map">
  </div>

  <div class="input-group mb-3">
    <select class="custom-select" id="equipment-select">
      <option selected value="any">Любой</option>
      <option value="PS">PlayStation VR</option>
      <option value="HTC">HTC Vive</option>
      <option value="Oculus">Oculus</option>
      <option value="Fullbody">Fullbody VR</option>
    </select>
    <div class="input-group-append">
      <label class="input-group-text" for="equipment-select">Оборудование</label>
    </div>
  </div>

  <div class="input-group mb-3">
    <select class="custom-select" id="rate-select">
      <option selected value="0-100">Любой</option>
      <option value="40-60">40-60</option>
      <option value="60-80">60-80</option>
      <option value="80-100">80-100</option>
    </select>
    <div class="input-group-append">
      <label class="input-group-text" for="rate-select">Рейтинг</label>
    </div>
  </div>

  <div class="input-group mb-3">
    <select class="custom-select" id="price-select">
      <option selected value="300-5000">Любая</option>
      <option value="300-450">300-450</option>
      <option value="450-700">450-700</option>
      <option value="700-5000">700+</option>
    </select>
    <div class="input-group-append">
      <label class="input-group-text" for="price-select">Стоимость</label>
    </div>
  </div>
</div>